{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Generator",
            "type": "node",
            "request": "launch",
            "sourceMaps": true,
            "program": "${workspaceFolder}/dist/cli/main.cjs",
            "args": [
                "generate",
                "--configuration",
                "dataspace-example/data-space-config.json"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.cjs"
            ],
            "preLaunchTask": "Build"
        },
        {
            "name": "Run Extension (without LSP debug)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.cjs"
            ],
            "preLaunchTask": "Build"
        },
        {
            "name": "Run Extension (LSP debug)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "env": {
                "DEBUG_BREAK": "true"
            },
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.cjs"
            ],
            "preLaunchTask": "Build"
        },
        {
            "name": "Attach to Language Server",
            "type": "node",
            "port": 6009,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.cjs",
                "${workspaceFolder}/node_modules/langium"
            ], 
            "timeout": 120000,
            "restart": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Attach to Browser",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Run Extension (LSP debug) + Attach to Language Server",
            "configurations": ["Run Extension (LSP debug)", "Attach to Language Server"]
        }
    ]
}
