{
    "name": "data-space-editor",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "typecheck": "tsc",
        "typecheck:watch": "tsc --watch",
        "lint": "eslint",
        "check": "npm run typecheck && npm run lint",
        "langium": "langium generate",
        "langium:watch": "langium generate --watch",
        "langium:production": "langium generate --mode=production",
        "compile": "node esbuild.mjs",
        "compile:watch": "node esbuild.mjs --watch",
        "compile:production": "node esbuild.mjs --minify",
        "test": "echo \"Error: no test specified\" && exit 1",
        "assemble": "npm run langium && npm run compile",
        "assemble:production": "npm run langium:production && npm run compile:production",
        "assemble:watch": "concurrently -k \"npm run langium:watch\" \"npm run compile:watch\"",
        "build": "npm run langium && npm run check && npm run compile",
        "build:production": "npm run langium:production && npm run check && npm run compile:production",
        "watch:all": "concurrently -k \"npm run typecheck:watch\" \"npm run langium:watch\" \"npm run compile:watch\"",
        "web:dev": "npm run langium && npm run check && vite",
        "web:dev:debug": "npm run langium && npm run check && vite --debug --force",
        "web:build": "npm run langium:production && npm run check && vite build",
        "web:build:preview": "vite preview"
    },
    "dependencies": {
        "@codingame/monaco-vscode-api": "11.1.2",
        "@codingame/monaco-vscode-editor-service-override": "11.1.2",
        "@codingame/monaco-vscode-keybindings-service-override": "11.1.2",
        "chalk": "~5.3.0",
        "commander": "~11.0.0",
        "langium": "~3.3.0",
        "monaco-editor": "npm:@codingame/monaco-vscode-editor-api@11.1.2",
        "monaco-editor-wrapper": "6.1.1",
        "monaco-languageclient": "~9.1.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@codingame/esbuild-import-meta-url-plugin": "~1.0.2",
        "@eslint/js": "^9.20.0",
        "@types/node": "^20.17.19",
        "@types/vscode": "~1.95.0",
        "concurrently": "~8.2.1",
        "esbuild": "^0.25.0",
        "eslint": "~9.20.1",
        "globals": "^15.15.0",
        "langium-cli": "~3.3.0",
        "typescript": "~5.7.3",
        "typescript-eslint": "^8.24.1",
        "vite": "6.2.0"
    },
    "displayName": "data-space-editor",
    "engines": {
        "vscode": "^1.95.0",
        "node": ">=20.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "data-space",
                "aliases": [
                    "Data Space",
                    "data-space"
                ],
                "extensions": [
                    ".dataspace"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "data-space",
                "scopeName": "source.data-space",
                "path": "syntaxes/data-space.tmLanguage.json"
            }
        ]
    },
    "main": "./dist/extension/main.cjs"
}
